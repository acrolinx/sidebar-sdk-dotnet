  <log4net>
    <appender name="SysTrace" type="log4net.Appender.TraceAppender, log4net">
      <immediateFlush value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date | [%-5level] %type{1}: %message%newline" />
      </layout>
    </appender>
    <root>
      <level value="Info" />
      <appender-ref ref="SysTrace" />
    </root>
  </log4net>